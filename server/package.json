    "mongoose": "^8.8.3",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/redis": "^4.0.10",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "mockingoose": "^2.16.2",
    "mongodb-memory-server": "^10.1.2",
